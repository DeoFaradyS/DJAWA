<Window x:Class="ManajemenGudang.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ManajemenGudang.ViewModels"
        Title="Registrasi Akun Gudang" Height="350" Width="400" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:RegisterViewModel/>
    </Window.DataContext>
    <StackPanel Margin="20">
        <TextBlock Text="Buat Akun Baru" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        <TextBlock Text="Username:" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15"/>

        <TextBlock Text="Password:" Margin="0,0,0,5"/>
        <PasswordBox x:Name="PasswordInput" Margin="0,0,0,20"/>

        <Button Content="Daftar" Padding="10,7" IsDefault="True"
                Command="{Binding RegisterCommand}"
                CommandParameter="{Binding ElementName=PasswordInput}"/>

        <Button Content="Sudah punya akun? Login" Margin="0,10,0,0"
            Command="{Binding BackToLoginCommand}"
            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
    </StackPanel>
    
    
</Window>