<Window x:Class="ManajemenGudang.Views.AdminDashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ManajemenGudang.ViewModels"
        xmlns:converters="clr-namespace:ManajemenGudang.Converters" 
        Title="Admin Dashboard" Height="600" Width="900" WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:AdminDashboardViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <converters:NotNullToBooleanConverter x:Key="NotNullToBooleanConverter"/>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Grid.ColumnSpan="2" 
                Content="Logout" 
                HorizontalAlignment="Right" 
                Command="{Binding LogoutCommand}" 
                Padding="10,5" Margin="0,0,0,10"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <DockPanel Grid.Column="0" Margin="0,0,15,0">
                <TextBlock DockPanel.Dock="Top" Text="Daftar Pengguna" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                <ListBox ItemsSource="{Binding AllUsers}" 
                         SelectedItem="{Binding SelectedUser}"
                         DisplayMemberPath="Username"/>
            </DockPanel>

            <DockPanel Grid.Column="1">
                <TextBlock DockPanel.Dock="Top" FontSize="18" FontWeight="Bold" Margin="0,0,0,10">
                    <Run Text="Barang Milik:"/>
                    <Run Text="{Binding SelectedUser.Username, FallbackValue='(Pilih pengguna)'}"/>
                </TextBlock>

                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="0,15,0,0"
                            IsEnabled="{Binding Path=SelectedItem, Converter={StaticResource NotNullToBooleanConverter}}">
                    <TextBlock Text="Ubah Status Menjadi:" VerticalAlignment="Center"/>
                    <ComboBox Margin="10,0" Width="150" 
                              ItemsSource="{Binding AvailableStatuses}"
                              SelectedItem="{Binding SelectedStatus}"/>
                    <Button Content="Ubah Status" Padding="10,5" Command="{Binding UpdateStatusCommand}"/>
                </StackPanel>

                <DataGrid ItemsSource="{Binding SelectedUserItems}" 
                          SelectedItem="{Binding SelectedBarang}"
                          AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nama Barang" Binding="{Binding NamaBarang}" Width="*"/>
                        <DataGridTextColumn Header="Jumlah" Binding="{Binding Jumlah}" Width="Auto"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                        <DataGridTextColumn Header="Tgl Input" Binding="{Binding TanggalInput, StringFormat='dd-MM-yyyy'}" Width="*"/>
                        <DataGridTextColumn Header="Tgl Update Status" Binding="{Binding TanggalUpdateStatus, StringFormat='dd-MM-yyyy HH:mm'}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Grid>
    </Grid>
</Window>