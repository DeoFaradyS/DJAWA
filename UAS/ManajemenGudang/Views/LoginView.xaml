<Window x:Class="ManajemenGudang.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ManajemenGudang.ViewModels"
        Title="Login Gudang" Height="350" Width="400" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>
    <StackPanel Margin="20">
        <TextBlock Text="Selamat Datang" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        <TextBlock Text="Username:" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15"/>

        <TextBlock Text="Password:" Margin="0,0,0,5"/>
        <PasswordBox x:Name="LoginPasswordBox" Margin="0,0,0,20"/>

        <Button Content="Login" Padding="10,7" IsDefault="True"
                Command="{Binding LoginCommand}"
                CommandParameter="{Binding ElementName=LoginPasswordBox}"/>

        <Button Content="Belum punya akun? Daftar" Margin="0,15,0,0" 
                Command="{Binding OpenRegisterViewCommand}" 
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
    </StackPanel>
</Window>