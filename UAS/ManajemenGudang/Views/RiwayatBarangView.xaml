<Window x:Class="ManajemenGudang.Views.RiwayatBarangView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ManajemenGudang.ViewModels"
        Title="Riwayat Barang" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:RiwayatBarangViewModel/>
    </Window.DataContext>
    <DockPanel Margin="15">
        <Button DockPanel.Dock="Top" Content="Logout" HorizontalAlignment="Right"
                Command="{Binding LogoutCommand}" Padding="10,5" Margin="0,0,0,10"/>

        <TextBlock DockPanel.Dock="Top" Text="Riwayat Barang" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox Width="300" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Cari" Margin="10,0,0,0" Width="80" Command="{Binding CariBarangCommand}"/>
            <Button Content="Tambah Barang" Margin="20,0,0,0" Command="{Binding OpenTambahBarangViewCommand}"/>
        </StackPanel>

        <DataGrid ItemsSource="{Binding DaftarBarang}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nama Barang" Binding="{Binding NamaBarang}" Width="*"/>
                <DataGridTextColumn Header="Deskripsi" Binding="{Binding Deskripsi}" Width="2*"/>
                <DataGridTextColumn Header="Jumlah" Binding="{Binding Jumlah}" Width="Auto"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                <DataGridTextColumn Header="Tanggal Input" Binding="{Binding TanggalInput, StringFormat='dd-MM-yyyy'}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>