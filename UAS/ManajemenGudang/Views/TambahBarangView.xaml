<Window x:Class="ManajemenGudang.Views.TambahBarangView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ManajemenGudang.ViewModels"
        Title="Tambah Barang Baru" Height="450" Width="400" WindowStartupLocation="CenterScreen" SizeToContent="Height">
    <Window.DataContext>
        <vm:TambahBarangViewModel/>
    </Window.DataContext>
    <StackPanel Margin="20">
        <TextBlock Text="Tambah Barang Baru" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
        <TextBlock Text="Nama Barang:" Margin="0,10,0,5"/>
        <TextBox Text="{Binding NamaBarangInput, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Text="Deskripsi:" Margin="0,10,0,5"/>
        <TextBox Text="{Binding DeskripsiInput, UpdateSourceTrigger=PropertyChanged}" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
        <TextBlock Text="Jumlah:" Margin="0,10,0,5"/>
        <TextBox Text="{Binding JumlahInput, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Content="Tambah Barang" Margin="0,20,0,0" Padding="10,7" IsDefault="True" Command="{Binding TambahBarangCommand}"/>
        <Button Content="Kembali" Margin="0,10,0,0" Padding="10,7" Command="{Binding KembaliCommand}"/>
    </StackPanel>
</Window>